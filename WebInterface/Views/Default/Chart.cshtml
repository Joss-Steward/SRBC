
@{
    ViewBag.Title = "Chart";
}

<h2>Chart</h2>

<div style="height: 340px;" id="chart"></div>

@section scripts {
    <script type="text/javascript">
        $(function () {
            var dataurl = '@Url.Action("ChartData")';

            function onDataReceived(series) {
                $.plot("#chart", series, {
                    lines: {
                        show: true
                    },
                    points: {
                        show: true
                    },
                    xaxis: {
                        mode: "time"
                    }
                });
            }

            $.ajax({
                url: dataurl,
                type: "GET",
                dataType: "json",
                success: onDataReceived
            });
        })
    </script>
}